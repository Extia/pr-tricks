{
  "manifest_version": 3,
  "name": "PR Tricks",
  "description": "PR Tricks",
  "version": "1.0",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://github.com/*",
    "https://www.google.com/",
    "https://mocki.io/v1/f2cc018a-2692-4c00-9314-a947d38ae3ee"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*"
      ],
      "js": [
        "vendor.js",
        "github-review-script.js"
      ]
    }
  ],
  "action": {
    "default_popup": "./views/options.html"
  },
  "options_page": "./views/options.html"
}